@model IEnumerable<Pospex.Models.User>
@{
    ViewBag.Title = "Home";

}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
       
            alert("@ViewBag.Message");
       
    </script>
}

@if (User.Identity.IsAuthenticated)
{
    <p>@User.Identity.Name</p>
    <p>Роли пользователя</p>
    @foreach (var role in @ViewBag.UserRoles)
    {
       <p>@role</p> 
    }

    <a asp-action="AddAvatar" class="btn btn-primary text-white"><i class="fas fa-plus"></i> &nbsp; Insert Avatar</a>

    @if (ViewBag.CurrentUser.Avatar != null)
    {
        <img style='width:250px' src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.CurrentUser.Avatar))" />
    }
    else
    {
        <img src="https://via.placeholder.com/150" width="250px" />
    }

    <form method="post" asp-controller="Account" asp-action="Logout">
        <input type="submit" value="Выход" />
    </form>

    <a asp-action="Create">Добавить пользователя</a>
    

    <table class="table">
        <tr><th>Email</th><th></th></tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                @if (User.IsInRole("admin"))
                {
                    <td>
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
@*                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>*@
                            <button type="submit" class="btn btn-sm btn-danger">
                                Удалить
                            </button>
                        </form>
                    </td>
                }

                <td>
                    <div>Роль пользователя</div>
                    @if (user.Role.Contains("admin"))
                    {
                        <p>admin</p>
                    }
                    else
                    {
                        <p>user</p>
                    }
                    

                    <a asp-controller="Roles" asp-action="Edit" asp-route-userid="@user.Id">Изменить роль пользователя</a>
                </td>

            </tr>
        }
    </table>
}
else
{
    <a asp-controller="Account" asp-action="Login">Вход</a>
    <a asp-controller="Account" asp-action="Register">Регистрация</a>
}

