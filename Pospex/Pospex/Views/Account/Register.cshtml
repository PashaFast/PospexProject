@model Pospex.ViewModels.RegisterViewModel
<h2 class="mt-3 mb-3">User registration</h2>
<form method="post" asp-controller="Account" asp-action="Register" style="width: 350px">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-2">
        <label asp-for="Email" class="mb-0">Username</label><br />
        <input asp-for="Email" class="form-control"/>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Password" class="mb-0">Password</label><br />
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="mb-2">
        <label asp-for="PasswordConfirm" class="mb-0">Confirm Password</label><br />
        <input asp-for="PasswordConfirm" class="form-control" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <input type="submit" value="Register" class="btn btn-success mt-2"/>
    </div>
</form>
